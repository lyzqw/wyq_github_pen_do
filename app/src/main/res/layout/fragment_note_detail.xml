<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="viewModel"
            type="com.wyq_github_pen_do.viewmodel.NoteViewModel" />

    </data>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingLeft="16dp"
            android:paddingTop="16dp"
            android:paddingRight="16dp">

            <com.wyq.common.widget.NoteTitleEditView
                android:id="@+id/noteTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@null"
                android:hint="写标题?"
                android:maxLines="3"
                android:text="@={viewModel._noteTitle}"
                android:textColor="@color/black_333333"
                android:textColorHint="@color/gray_999999"
                android:textSize="25sp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tv_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="@{viewModel.noteDate}"
                app:layout_constraintLeft_toLeftOf="@+id/noteTitle"
                app:layout_constraintTop_toBottomOf="@+id/noteTitle"
                tools:text="2020-5-4" />


            <EditText
                android:id="@+id/tvNoteContent"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginTop="16dp"
                android:background="@null"
                android:gravity="left|top"
                android:text="@={viewModel._noteContent}"
                app:layout_constraintBottom_toTopOf="@+id/cl_bottom_panel"
                app:layout_constraintTop_toBottomOf="@+id/tv_date"
                tools:text="哈哈哈" />


            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/cl_bottom_panel"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                app:layout_constraintBottom_toBottomOf="parent">

                <ImageView
                    android:id="@+id/imageBack"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/icon_detail_back"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <ImageView
                    android:id="@+id/iv_star"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/icon_star"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>


        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>