<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_bottom"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        tools:background="@color/gray_999999"
        tools:layout_height="30dp">


        <TextView
            android:id="@+id/tv_diary"
            style="@style/LayoutMainBottomButton"
            android:layout_width="0dp"
            android:layout_marginLeft="16dp"
            android:text="@string/text_diary"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_weight="1"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/tv_note" />

        <TextView
            android:id="@+id/tv_note"
            style="@style/LayoutMainBottomButton"
            android:layout_width="0dp"
            android:layout_marginLeft="8dp"
            android:text="@string/tv_note"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_weight="1"
            app:layout_constraintLeft_toRightOf="@+id/tv_diary"
            app:layout_constraintRight_toLeftOf="@+id/tv_pending" />


        <TextView
            android:id="@+id/tv_pending"
            style="@style/LayoutMainBottomButton"
            android:layout_width="0dp"
            android:layout_marginLeft="8dp"
            android:text="@string/tv_pending"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_weight="1"
            app:layout_constraintLeft_toRightOf="@+id/tv_note"
            app:layout_constraintRight_toLeftOf="@+id/tv_schedule" />

        <TextView
            android:id="@+id/tv_schedule"
            style="@style/LayoutMainBottomButton"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="16dp"
            android:text="@string/tv_schedule"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_weight="1"
            app:layout_constraintLeft_toRightOf="@+id/tv_pending"
            app:layout_constraintRight_toRightOf="parent" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>