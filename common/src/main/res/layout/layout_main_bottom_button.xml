<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    tools:background="@color/gray_999999"
    tools:layout_height="50dp">


    <TextView
        android:id="@+id/tv_diary"
        style="@style/LayoutMainBottomButton"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginLeft="16dp"
        android:layout_weight="1"
        android:text="@string/text_diary" />

    <Space
        android:layout_width="8dp"
        android:layout_height="match_parent" />

    <TextView
        android:id="@+id/tv_note"
        style="@style/LayoutMainBottomButton"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:text="@string/tv_note" />

    <Space
        android:layout_width="8dp"
        android:layout_height="match_parent" />


    <TextView
        android:id="@+id/tv_pending"
        style="@style/LayoutMainBottomButton"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:text="@string/tv_pending" />


    <Space
        android:layout_width="8dp"
        android:layout_height="match_parent" />


    <TextView
        android:id="@+id/tv_schedule"
        style="@style/LayoutMainBottomButton"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginRight="16dp"
        android:layout_weight="1"
        android:text="@string/tv_schedule" />


</LinearLayout>